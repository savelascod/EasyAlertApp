<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to Easy Alert"
                    android:id="@+id/textView" android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="30dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please, insert the search criteria"
                    android:id="@+id/textView2" android:layout_below="@+id/textView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="32dp" android:textSize="20dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/nit"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/textView2"
                    android:layout_centerHorizontal="true" android:hint="NIT"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/service_type"
                    android:layout_below="@+id/nit"
                    android:layout_centerHorizontal="true"
                    android:hint="Tipo de Servicio"
                    android:inputType="number"
                    android:ems="10"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/razon_social"
                    android:layout_centerHorizontal="true"
                    android:hint="Razon social"
                    android:layout_below="@id/service_type"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/address"
                    android:layout_centerHorizontal="true"
                    android:hint="Direccion"
                    android:layout_below="@id/razon_social"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/phone"
                    android:layout_centerHorizontal="true"
                    android:hint="Telefono"
                    android:layout_below="@id/address"
                    android:inputType="number"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/email"
                    android:layout_centerHorizontal="true"
                    android:hint="Email"
                    android:layout_below="@id/phone"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/representative"
                    android:layout_centerHorizontal="true"
                    android:hint="Representante legal"
                    android:layout_below="@id/email"/>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/send_parameters_button"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/representative"
                    android:text="Consultar"
                    android:layout_marginTop="10dp"
                    android:onClick="sendData"
            />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
